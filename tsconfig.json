{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Xavfsizlik va Strict sozlamalar */
    "strict": true,
    "noImplicitAny": false, 
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Bundler uchun maxsus */
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Path (Yo'llar) */
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}